{% extends "layouts/base.html.twig" %}

{% block title %}Liste de pin{% endblock %}
{% block body %}
	<div class="container">
		<h3 class="text-center">{{ plusiraze(pins|length ,"Pin","Pins") }}</h3>
		<div class="row">
			{% for pin in pins %}
				<div class="col-sm-3 mb-3">
					<div class="card border-primary">
						<div class="card-body">
							<h4 class="card-title">
								<a href="{{ path('app_show_pin',{'id':pin.id}) }}">{{ pin.title }}</a>
							</h4>
							<p class="card-text small">{{ pin.description | shortly }}</p>
							<p class="text-muted font-italic" style="font-size:10px">Submitted:
								{{ pin.createdAt|date }}</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
