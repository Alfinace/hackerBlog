{% extends 'layouts/base.html.twig' %}

{% block title %}
	{{ parent() }} | Login
{% endblock %}

{% block body %}
	<div class="container" data-aos="flip-u^" >
		<div class="row">
			<div class="col-sm-5 mx-auto  rounded h-400" >
				<h3 class="text-center mt-5">Authentication system</h3>
				{% if error %}
					<div class="alert alert-danger mt-5 mb-5">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<form method="post" class="mt-5 ">
					<div class="form-group">
						<label for="email">Email</label>
						<input type="email" class=" form-control form-control-lg" value="{{last_username}}" name="email" id="email" required>
					</div>
					<div class="form-group">
						<label for="password">Password</label>
						<input type="password" class="form-control form-control-lg" name="password" id="password">
					</div>
					<div class="col-0 ml-auto">
						<button type="submit" class="btn btn-block btn-outline-primary">Log in</button>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token("authenticate") }}">

				</form>
			</div>
		</div>
	</div>

{% endblock %}
